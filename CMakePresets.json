{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "generator": "Ninja",
      "hidden": true
    },
    {
      "name": "emscripten-release",
      "displayName": "Emscripten Release",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "$env{EMSDK}/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake"
        },
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_FLAGS": "-O3 -g2 -fwasm-exceptions -Wno-limited-postlink-optimizations -Wall -Werror",
        "CMAKE_EXE_LINKER_FLAGS": "-O3 -g2"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "emscripten",
      "targets": [
        "demo"
      ],
      "hidden": true
    },
    {
      "name": "emscripten-release",
      "displayName": "Emscripten Release",
      "inherits": "emscripten",
      "configurePreset": "emscripten-release"
    }
  ]
}
